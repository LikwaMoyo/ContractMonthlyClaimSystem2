@{
    ViewData["Title"] = "Claim Submitted Successfully";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-5">
                <div class="card-body text-center">
                    <h1 class="card-title text-success">
                        <i class="fas fa-check-circle"></i> Claim Submitted Successfully
                    </h1>
                    <p class="card-text lead">
                        Your claim has been received and is pending review.
                    </p>
                    <p class="card-text">
                        Thank you for submitting your claim. Our team will process it shortly.
                    </p>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary mt-3">Submit Another Claim</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}