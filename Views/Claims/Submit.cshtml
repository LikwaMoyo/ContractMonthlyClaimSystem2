@model Claim

<h2>Submit Claim</h2>

<form asp-action="Submit" enctype="multipart/form-data" class="claim-form">
    <div class="form-group">
        <label asp-for="HoursWorked">Hours Worked</label>
        <input asp-for="HoursWorked" class="form-control" />
        <span asp-validation-for="HoursWorked" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HourlyRate">Hourly Rate</label>
        <input asp-for="HourlyRate" class="form-control" />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdditionalNotes">Additional Notes</label>
        <textarea asp-for="AdditionalNotes" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="supportingDocument">Supporting Document</label>
        <input type="file" name="supportingDocument" id="supportingDocument" class="form-control-file" />
    </div>
    <button type="submit" class="btn btn-primary">Submit Claim</button>
</form>