@model IEnumerable<ContractMonthlyClaimSystem2.Models.Claim>

<table class="table">
    <!-- Table header -->
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <!-- Other claim details -->
                <td>
                    <form asp-action="UpdateStatus" asp-route-id="@claim.Id" method="post">
                        <select name="newStatus" class="form-control">
                            @foreach (ClaimStatus claimStatus in Enum.GetValues(typeof(ClaimStatus)))
                            {
                                <option value="@claimStatus" selected="@(claimStatus == claim.Status)">@claimStatus</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-primary mt-2">Update Status</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>